<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/android_toast_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/android_toast_center_background"
        android:gravity="center"
        android:minHeight="@dimen/toast_center_view_width"
        android:minWidth="@dimen/toast_center_view_height"
        android:orientation="vertical"
        android:visibility="visible">

        <com.androidx.view.StatusView
            android:id="@+id/android_toast_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:color="@color/colorAccent"
            app:radius="20dp"
            app:status="warning"
            app:wirelessStartRadius="2dp"
            app:wirelessPadding="2dp"
            app:wirelessStrokeWidth="5dp" />

        <TextView
            android:id="@+id/android_toast_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="连网失败"
            android:textColor="@color/colorCenterToastText"
            android:textSize="@dimen/toast_center_view_text_size"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>